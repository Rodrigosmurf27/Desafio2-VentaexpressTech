<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24dp"
        android:gravity="center_vertical">

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/email_hint"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:hint="@string/password_hint"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/btn_login" />

        <TextView
            android:id="@+id/tvOr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:gravity="center"
            android:text="@string/or_signin_with" />

        <!-- OAuth: GitHub -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnLoginGitHub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/btn_login_github"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:backgroundTint="#24292E"
            app:cornerRadius="8dp"
            app:icon="@drawable/ic_github"
            app:iconTint="#FFFFFF"
            app:iconPadding="8dp"
            app:iconGravity="textStart"
            app:rippleColor="#334A4A4A" />

        <!-- OAuth: Facebook -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnLoginFacebook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/btn_login_facebook"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:backgroundTint="#1877F2"
            app:cornerRadius="8dp"
            app:icon="@drawable/ic_facebook"
            app:iconTint="#FFFFFF"
            app:iconPadding="8dp"
            app:iconGravity="textStart"
            app:rippleColor="#332255FF" />

        <TextView
            android:id="@+id/tvGoRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/go_to_register"
            android:textColor="@android:color/holo_blue_dark" />

    </LinearLayout>
</ScrollView>
